<div class="container">
  <div class="container-fluid">

    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
 <h1>Calculadora</h1>
      </div>
     </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

  <form class="calculadora" action="/calculadora" method="post">

    <div class="form-group">
    <label for="txtNumero1">Ingrese un numero:</label>
    <input type="text" class="form-control" id="txtNumero1" name="txtNumero1 value ="{{txtNumero1}}"><br><br>
    </div>

    <div class="form-group">
    <label for="txtNumero2">Ingrese otro numero:</label>
    <input type="text" class="form-control" id="txtNumero2"
           name="txtNumero2" value ="{{txtNumero2}}"><br><br>
    </div>

 <div class="pull-right">
    <button type="button" class="btn btn-default">+</button>
    <button type="button" class="btn btn-success">-</button>
    <button type="button" class="btn btn-info">x</button>
    <button type="button" class="btn btn-warning">/</button>
</div>
  </form>
 </div>
</div>
</div>
